/* pages/book/book.wxss */
@import '/static/iconfont/iconfont.wxss';

.book{
  padding:0 20rpx;
}

.book .menu{
  position: fixed;
  bottom:0;
  left:0;
  right:0;
  z-index: 995;
  display: flex;
  justify-content: space-between;
  border-top:1px solid #f1f1f1;
  line-height: 100rpx;
  height: 100rpx;
  background: #fff;
}

.book .menu .iconfont{
  flex:1;
  text-align: center;
  font-size: 20px;
}

.menu .iconfont{
  background: #c7b1b1;
}

.book .menu .iconfont:active{
  background: #409eff;
}

.book .catalog-menu{
  position: fixed;
  left:0;
  top:0;
  bottom:0;
  margin-bottom: 100rpx;
  /* padding-bottom: 100rpx; */
  background: #fff;
  border:1px solid #f1f1f1;
  z-index: 996;
  width:600rpx;
  /* height:100%; */
  transform:translate3d(-100%,0,0);
  transition: transform .5s ease;
}

.book .catalog-active{
  transform: translate3d(0,0,0)
}

.book .catalog-menu .catalog-item{
  font-size: 12px;
  color:#555;
  line-height: 90rpx;
  height: 70rpx;
  padding-left:20rpx;
  padding-bottom:20rpx;
  border-bottom: 2rpx solid #f1f1f1;
}

.book .catalog-menu .catalog-item:active{
  background: #f1f1f1;
}

.book .mask{
  position: fixed;
  top:0;
  right:0;
  bottom:0;
  left:0;
  z-index: 888;
  background: rgba(0,0,0,.2);
}
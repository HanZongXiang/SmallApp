/* pages/book/book.wxss */
@import '/towxml/style/main.wxss';
@import '/towxml/style/theme/light.wxss';
@import '/towxml/style/theme/dark.wxss';
@import '/static/iconfont/iconfont.wxss';

.book .menu{
  position: fixed;
  bottom:0;
  left:0;
  right:0;
  z-index: 995;
  display: flex;
  justify-content: space-between;
  border-top:1px solid #f1f1f1;
  line-height: 100rpx;
  height: 100rpx;
  background: #fff;
}

.book .menu .iconfont{
  flex:1;
  text-align: center;
  font-size: 20px;
}

.book .menu .iconfont:active{
  background: #f1f1f1;
}

.book .catalog-menu{
  position: fixed;
  left:0;
  top:0;
  bottom:0;
  padding-bottom: 100rpx;
  background: #fff;
  border:1px solid #f1f1f1;
  z-index: 996;
  width:600rpx;
  height:100%;
}

.book .catalog-menu .catalog-item{
  font-size: 12px;
  color:#555;
  line-height: 90rpx;
  height: 70rpx;
  padding-left:20rpx;
  padding-bottom:20rpx;
  border-bottom: 2rpx solid #f1f1f1;
}

.book .catalog-menu .catalog-item:active{
  background: #f1f1f1;
}

.book .mask{
  position: fixed;
  top:0;
  right:0;
  bottom:0;
  left:0;
  z-index: 888;
  background: rgba(0,0,0,.2);
}
/* pages/details/detail.wxss */
.divider{
  height:10rpx;
  background: #e9e9e9;
}

.book-details{
  margin:20rpx auto 0;
  width:710rpx;
}

.book-top{
  display: flex;
}

.book-top image{
  width: 93px;
  height: 110px;
}

.book-top .main-msg{
  display: flex;
  flex-direction: column;
  padding-bottom:20rpx;
  margin-top:20rpx;
  margin-left: 40rpx;
  justify-content: space-around;
  color:#555;
  font-size: 24rpx;
}

.main-msg .title{
  font-size: 28rpx;
  font-weight: 700;
  color:#333;
}

.main-msg .title,
.main-msg .author-name,
.main-msg .looknums{
  margin-bottom: 35rpx;
}

.book-details .book-bottom{
  width: 710rpx;
  margin:40rpx auto 30rpx;
  display: flex;
  justify-content: space-between;
}

.book-bottom .btn{
  margin: 0;
  width: 300rpx;
  background: #e9e9e9;
  border:none;
  color:#444;
  font-size: 24rpx;
}

.book-desc{
  border-bottom: 1px solid #e9e9e9;  
}

.book-desc .title{
  font-size: 32rpx;
  font-weight: 700;
  color:#333;
  margin-top:30rpx;
  margin-bottom:40rpx;
}

.book-desc .desc-main{
  font-size: 24rpx;
  color:#555;
  padding-bottom:20rpx;
}

.book-catalog{
  display: flex;
  padding:40rpx 20rpx;
  justify-content: space-between;
}

.box-left{
  display: flex;
}

.box-left .show-catalog{
  margin-right: 18rpx;
  font-size: 28rpx;
  font-weight: 700;
  color:#333;
  position: relative;
  bottom:1px;
}

.box-left .catalogs{
  font-size: 24rpx;
  color:#555;
}

.box-right .update-time{
  font-size: 20rpx;
  color:#555;
}

.btn-wrap{
  position:fixed;
  bottom:0;
  right: 0;
  left:0;
  height: 80rpx;
  padding:10rpx 14rpx;
  font-size: 20rpx;
  box-shadow: 0 4rpx 12rpx 0 rgba(0,0,0,.3);
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-wrap .btn{
  background: #409eff;
  color:#fff;
  font-size: 24rpx;
  height:60rpx;
  width:710rpx;
  margin:0;
}
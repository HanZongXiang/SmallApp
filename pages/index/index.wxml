<!--index.wxml-->
<view class="container index">
  <swiper indicator-dots='{{indicatorDots}}' autoplay interval='{{2000}}' duration='{{duration}}'>
    <block wx:for="{{swiperData}}" wx:key="{{index}}">
      <swiper-item bindtap="jumpBook" data-id="{{item.book._id}}">
        <image src='{{item.img}}' class='slide-image'></image>
      </swiper-item>
    </block>
  </swiper>

  <view class='main-content'>
    <view class='content-item' wx:for="{{mainContent}}" wx:key="{{index}}">
      <view class='title'>{{item.title}}</view>
      <view class='content' wx:for="{{item.books}}" wx:key="{{index}}">
        <view class='box-left'>
          <image src='{{item.img}}' class='img'></image>
        </view>
        <view class='box-right'>
          <view class='book-title'>{{item.title}}</view>
          <view class='book-desc'>{{item.desc}}</view>
          <view class='author'>
            <text class='author-left'>{{item.author}}</text>
            <view class='author-right'>
              <text class='update-time'>两天前</text>
              <text class='category'>后端开发</text>
              <text class='looknums'>{{item.looknums}}人在看</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>

</view>
